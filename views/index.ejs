<div class="container">
	<form action="/coap" method="post" class="form-horizontal" role="form">
		<p>COPPER</p>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="login">Method:</label>
		    <div class="col-sm-10">
		    	<input type="text" required class="form-control" id="method" name="method" size="30" placeholder="Enter method">
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="password">IP:</label>
		    <div class="col-sm-10"> 
		        <input type="text" required class="form-control" id="host" name="host" size="30" placeholder="Enter hostname">
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="password">Path:</label>
		    <div class="col-sm-10"> 
		        <input type="text" required class="form-control" id="path" name="path" size="30" placeholder="Enter path">
		    </div>
		</div>
		<div class="form-group">
		    <label class="control-label col-sm-2" for="password">Query:</label>
		    <div class="col-sm-10"> 
		        <input type="text" class="form-control" id="query" name="query" size="30" placeholder="Enter query (e.g. 'a=b&c=d')">
		    </div>
		</div>
		<button class="mybtn btn btn-primary" type="submit">Send Request</button>
	</form>
	<%if(typeof data !== 'undefined') {%>
		<div class="alert alert-info" role="alert">Response: <%=data%></div>
	<%}%>
	<%if(typeof error !== 'undefined') {%>
		<div class="alert alert-danger" role="alert">Error: <%=error%></div>
	<%}%>
</div>