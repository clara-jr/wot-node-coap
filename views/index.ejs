<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h1 style="font-size:40px;">Bat-CoAP</h1>
		</div>
		<div class="panel-body">
			<form action="/" method="post" class="form-horizontal" role="form">
				<fieldset>
					<div class="row">
						<div class="col-sm-12 col-md-10 col-md-offset-1">
							<div class="form-group row">
							    <label class="control-label col-sm-2" for="password">IP:</label>
							    <div class="col-sm-10"> 
							        <input type="text" required class="form-control" id="host" name="host" placeholder="Enter hostname">
							    </div>
							</div>
							<div class="form-group row">
							    <label class="control-label col-sm-2" for="password">Resource:</label>
							    <div class="col-sm-10"> 
							        <input type="text" required class="form-control" id="path" name="path" placeholder="Enter path (e.g. 'devinfo')">
							    </div>
							</div>
							<div class="form-group row">
							    <label class="control-label col-sm-2" for="password">Query:</label>
							    <div class="col-sm-10"> 
							        <input type="text" class="form-control" id="query" name="query" placeholder="Enter query (e.g. 'p=state&v=ON')">
							    </div>
							</div>
							<div class="form-group">
								<input type="hidden" id="method" name="method">
								<button style="margin-left:10px; margin-right:5px;" class="mybtn btn btn-primary" onclick="$('#method').val('GET');" type="submit">GET</button>
								<button style="margin-left:5px; margin-right:5px;" class="mybtn btn btn-primary" onclick="$('#method').val('PUT');" type="submit">PUT</button>
								<button style="margin-left:5px; margin-right:5px;" class="mybtn btn btn-primary" onclick="$('#method').val('POST');" type="submit">POST</button>
								<button style="margin-left:5px; margin-right:10px;" class="mybtn btn btn-primary" onclick="$('#method').val('DELETE');" type="submit">DELETE</button>
							</div>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
		<%if(typeof data !== 'undefined') {%>
			<div class="alert alert-info panel-footer" role="alert" style="background-color: #d9edf7; margin-bottom:0px; border-radius:0px; padding-top:20px; padding-bottom:20px;" >Response: <%=data%></div>
		<%}%>
		<%if(typeof error !== 'undefined') {%>
			<div class="alert alert-danger panel-footer" role="alert" style="background-color: #f2dede; margin-bottom:0px; border-radius:0px; padding-top:20px; padding-bottom:20px;" >Error: <%=error%></div>
		<%}%>
	</div>
</div>